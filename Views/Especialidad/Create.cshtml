@model Turnos.Models.Especialidad

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width">
        <title>Create</title>
    </head>
    <body>
<h4>Especialidad</h4>
<hr>
    <form class="col s12" asp-action="Create">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="row">
            <div class="input-field col s12">
                <i class="material-icons medium prefix waves-light red-text">star_rate</i>
                <label asp-for="Descripcion">Introduzca La Especialidad</label>
                <input asp-for="Descripcion" type="text" class="validate">
                <span asp-validation-for="Descripcion"></span>
            </div>
        </div>
            <div class="row">
                <div class="col s6 m6">
                    <a class="btn waves-effect waves-light red-text blue lighten-5" asp-action="Index"><i class="material-icons left">undo</i>Retroceder</a>
                </div>

                <div class="col s6 m6">
                    <button class="btn waves-effect waves-light red" type="submit" name="action">Save
                        <i class="material-icons right">send</i>
                    </button>
                </div> 
            </div>                  
    </form>
    </body>
</html>