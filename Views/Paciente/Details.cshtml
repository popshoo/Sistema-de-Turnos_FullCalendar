@model Turnos.Models.Paciente
<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width">
        <title>Delete</title>
    </head>
    <body>
        <h3>Seguro que usted desea eliminar el medico del registro?</h3>
        <div>
            <hr>
            <h4>Medico</h4>
            
        <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content highlight z-depth-3 blue lighten-5">
          <span class="card-title"><h4><b>@Html.DisplayFor(model => model.Nombre), @Html.DisplayFor(model => model.Apellido)</b></h4></span>
                <dt>
                    <h6>@Html.DisplayNameFor(modelo => modelo.Email) : @Html.DisplayFor(modelo => modelo.Email)</h6>
                </dt><hr>
                <dt>
                    <h6>@Html.DisplayNameFor(modelo => modelo.Telefono) : @Html.DisplayFor(modelo => modelo.Telefono)</h6>
                </dt><hr>
                <dt>
                    <h6>@Html.DisplayNameFor(modelo => modelo.Direccion) : @Html.DisplayFor(modelo => modelo.Direccion)</h6>
                </dt><hr>
        </div>

        <div class="card-action waves-light red z-depth-3">
          <form asp-action="Delete">
                <input type="hidden" asp-for="IdPaciente">
                <a class="white-text right" asp-action="Edit" asp-route-id="@Model.IdPaciente">Modificar</a>
                <a class="white-text" asp-action="Index">Back To List</a>
            </form>
        </div>

        </div>
       </div>
      </div>
     </div>
    </body>
</html>